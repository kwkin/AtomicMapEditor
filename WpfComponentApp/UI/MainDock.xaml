<UserControl x:Class="WpfComponentApp.UI.MainDock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfComponentApp.UI"
             xmlns:pane="clr-namespace:WpfComponentApp.UI.Panes"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <WrapPanel Background="#f6f6f6">
                <pane:LabelPane />
                <pane:NormalButtonPane />
                <pane:SpecialButtonPane />
                <pane:BoxesPane />
                <pane:SliderPane />
                <pane:TextBoxPane />
                <pane:ComboBoxPane />
                <pane:TextAreaPane />
                <pane:StepperPane />
                <pane:ColorPickerPane />
                <pane:ProgressPane />
                <pane:ExpanderPane />
                <pane:TabPane />
                <pane:ListBoxPane />
                <pane:ContextMenuPane />
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
