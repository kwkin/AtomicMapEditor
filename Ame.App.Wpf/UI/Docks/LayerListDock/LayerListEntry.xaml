<UserControl x:Class="Ame.App.Wpf.UI.Docks.LayerListDock.LayerListEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Ame.App.Wpf.UI.Docks.LayerListDock"
             xmlns:actions="clr-namespace:Ame.App.Wpf.UILogic.Actions"
             xmlns:extcomp="clr-namespace:Ame.Components.Extended;assembly=Ame.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Rectangle x:Name="selectionHitBox"
                   Fill="Transparent"
                   Stretch="Fill"
                   Grid.ColumnSpan="3">
        </Rectangle>

        <StackPanel Orientation="Horizontal"
                    Grid.Column="0">
            <ToggleButton x:Name="showLayerToggleButton"
                          Style="{DynamicResource PrimaryMidIconToggleButtonStyle}"
                          IsChecked="{Binding Layer.IsVisible}"
                          ToolTip="Show: Toggles the layer display">
                <ContentControl Content="{StaticResource ic_VisibilityOn}"
                                    Width="{StaticResource MidIconSize}"
                                    Height="{StaticResource MidIconSize}"/>
            </ToggleButton>

            <ToggleButton x:Name="lockLayerToggleButton"
                          Style="{DynamicResource PrimaryMidIconToggleButtonStyle}"
                          IsChecked="{Binding Layer.IsImmutable}"
                          ToolTip="Lock: Prevents the layer from being moved and edited">
                <ContentControl Content="{StaticResource ic_Lock}"
                                    Width="{StaticResource MidIconSize}"
                                    Height="{StaticResource MidIconSize}"/>
            </ToggleButton>

            <Image x:Name="tilesetImage"
                   Source="{Binding LayerPreview, Mode=OneWay}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Width="32"
                   Height="32"
                   Stretch="UniformToFill">
            </Image>
        </StackPanel>

        <TextBox x:Name="layerNameLabel"
                 Text="{Binding Layer.Name}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Grid.Column="1"
                 IsReadOnly="True"
                 BorderThickness="0"
                 Background="Transparent">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <actions:SetPropertyAction PropertyName="IsReadOnly"
                                               TargetObject="{Binding Text, ElementName=layerNameLabel}">
                        <actions:SetPropertyAction.PropertyValue>
                            <sys:Boolean>False</sys:Boolean>
                        </actions:SetPropertyAction.PropertyValue>
                    </actions:SetPropertyAction>
                </i:EventTrigger>
                <i:EventTrigger EventName="LostFocus">
                    <actions:SetPropertyAction PropertyName="IsReadOnly"
                                               TargetObject="{Binding Text, ElementName=layerNameLabel}">
                        <actions:SetPropertyAction.PropertyValue>
                            <sys:Boolean>True</sys:Boolean>
                        </actions:SetPropertyAction.PropertyValue>
                    </actions:SetPropertyAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <Label x:Name="layerPositionLabel"
               Content="{Binding Layer.Position, Mode=OneWay}"
               HorizontalAlignment="Right"
               Grid.Column="2" />
    </Grid>
</UserControl>

