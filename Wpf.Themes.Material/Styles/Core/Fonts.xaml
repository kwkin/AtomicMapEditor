<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ********************************** Theme Fonts **********************************-->
    <FontFamily x:Key="PrimaryFontFamily">Segoe UI Emoji</FontFamily>

    <sys:Double x:Key="PrimaryFontSizeSmall">12</sys:Double>
    <sys:Double x:Key="PrimaryFontSize">14</sys:Double>
    <sys:Double x:Key="PrimaryFontSizeLarge">16</sys:Double>
    <sys:Double x:Key="PrimaryFontSizeTitle">18</sys:Double>
    
    <FontWeight x:Key="PrimaryFontWeight">Regular</FontWeight>

    <FontWeight x:Key="PrimaryFontTitleWeight">Bold</FontWeight>
</ResourceDictionary>
