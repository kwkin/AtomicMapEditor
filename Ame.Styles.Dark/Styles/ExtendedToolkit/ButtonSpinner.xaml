                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused" />
                                <VisualState x:Name="Unfocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Assets -->
                        <Border Background="{DynamicResource TransparentBrush}">
                            <Path x:Name="path"
                                  Data="M 600 250 L 600 350 L 200 350 L 200 250 L 600 250 "
                                  Fill="{TemplateBinding Background}"
                                  Stretch="Uniform" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ############################### Button Spinner Style ############################### -->
    <Style x:Key="ButtonSpinnerStyle"
           TargetType="{x:Type xctk:ButtonSpinner}">
        <Setter Property="Background"
                Value="{DynamicResource PrimaryBrush1}" />
        <Setter Property="Focusable"
                Value="False" />
        <Setter Property="IsTabStop"
                Value="False" />
        <Setter Property="MinWidth"
                Value="8" />
        <Setter Property="MinHeight"
                Value="8" />
        <Setter Property="OverridesDefaultStyle"
                Value="True" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type xctk:ButtonSpinner}">
                    <Grid x:Name="Root">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="SpinnerIncrementContent"
                                              Width="16" />
                            <ColumnDefinition x:Name="SpinnerDecrementContent"
                                              Width="16" />
                        </Grid.ColumnDefinitions>
                        <RepeatButton x:Name="PART_IncreaseButton"
                                      Grid.Column="0"
                                      Style="{StaticResource ButtonSpinnerIncrementStyle}">
                        </RepeatButton>

                        <RepeatButton x:Name="PART_DecreaseButton"
                                      Grid.Column="1"
                                      Style="{StaticResource ButtonSpinnerDecrementStyle}">
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>