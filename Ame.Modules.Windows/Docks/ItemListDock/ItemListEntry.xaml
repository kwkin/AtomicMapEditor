<UserControl x:Class="Ame.Modules.Windows.Docks.ItemListDock.ItemListEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ame.Modules.Windows.Docks.ItemListDock"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Ame.Modules.Windows;component/Docks/ItemListDock/ItemListContextMenu.xaml" />
    </UserControl.Resources>
    
    <!-- TODO point to image -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="tilesetImage"
               Source="{Binding ItemImage}"
               Stretch="UniformToFill"
               Grid.Column="0">
        </Image>
        
        <Label x:Name="tilesetName"
               Content="{Binding Name}" 
               Grid.Column="1"/>
    </Grid>
</UserControl>
