<UserControl x:Class="Ame.Modules.Windows.Interactions.MapProperties.MapPropertiesGeneral"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:basetype="clr-namespace:Ame.Infrastructure.BaseTypes;assembly=Ame.Infrastructure"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:Ame.Modules.Windows.Interactions.MapProperties"
             xmlns:models="clr-namespace:Ame.Infrastructure.Models;assembly=Ame.Infrastructure"
             xmlns:actions="clr-namespace:Ame.Infrastructure.Actions;assembly=Ame.Infrastructure"
             xmlns:conv="clr-namespace:Ame.Infrastructure.Converters;assembly=Ame.Infrastructure"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Ame.Themes.Material;component/Styles/Controls/Native/Label.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Ame.Themes.Material;component/Styles/Controls/Native/TextBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Ame.Themes.Material;component/Styles/Controls/Native/ComboBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Ame.Themes.Material;component/Styles/Controls/ExtendedToolkit/NumericUpDown.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <conv:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid VerticalAlignment="Top"
          Margin="8 4 8 4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label x:Name="nameLabel"
               Style="{StaticResource MainSmallLabelStyle}"
               Content="Name"
               Grid.Row="0"
               Grid.Column="0"
               VerticalAlignment="Center" />
        <TextBox x:Name="nameTextBox"
                 Style="{StaticResource PrimaryMidTextBoxStyle}"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 VerticalAlignment="Center"
                 Margin="0 0 0 10" />

        <Label x:Name="rowLabel"
               Style="{StaticResource MainSmallLabelStyle}"
               Content="Rows"
               Grid.Row="2"
               Grid.Column="0"
               VerticalAlignment="Center" />
        <Label x:Name="columnLabel"
               Style="{StaticResource MainSmallLabelStyle}"
               Content="Columns"
               Grid.Row="2"
               Grid.Column="1"
               VerticalAlignment="Center"
               Margin="5 0 0 0" />
        
        <xctk:IntegerUpDown x:Name="rowIntStepper"
                            Style="{StaticResource PrimaryLightNumericUpDownStyle}"
                            Value="{Binding Rows}"
                            Grid.Row="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Increment="1"
                            Maximum="2048"
                            Minimum="1"
                            Margin="0 0 5 10" />
        <xctk:IntegerUpDown x:Name="columnIntStepper"
                            Style="{StaticResource PrimaryLightNumericUpDownStyle}"
                            Value="{Binding Columns}"
                            Grid.Row="3"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Increment="1"
                            Maximum="2048"
                            Minimum="1"
                            Margin="5 0 0 10" />

        <ComboBox x:Name="scaleComboBox"
                  Style="{StaticResource PrimaryMidComboBoxStyle}"
                  SelectedItem="{Binding Scale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  ItemsSource="{Binding Source={actions:EnumBindingSourceExtension {x:Type models:ScaleType}}}"
                  Grid.Row="4"
                  Grid.Column="1"
                  VerticalAlignment="Center"
                  SelectedIndex="0"
                  Margin="5 0 0 10" />

        <Label x:Name="tileWidthLabel"
               Style="{StaticResource MainSmallLabelStyle}"
               IsEnabled="{Binding Scale, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:ScaleType.Tile}}"
               Content="Tile Width"
               Grid.Row="5"
               Grid.Column="0"
               VerticalAlignment="Center" />
        <Label x:Name="tileHeightLabel"
               Style="{StaticResource MainSmallLabelStyle}"
               IsEnabled="{Binding Scale, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:ScaleType.Tile}}"
               Content="Tile Height"
               Grid.Row="5"
               Grid.Column="1"
               VerticalAlignment="Center"
               Margin="5 0 0 0" />
        <xctk:IntegerUpDown x:Name="tileWidthIntStepper"
                            Style="{StaticResource PrimaryLightNumericUpDownStyle}"
                            Value="{Binding TileWidth}"
                            IsEnabled="{Binding Scale, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:ScaleType.Tile}}"
                            Grid.Row="6"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Increment="1"
                            Maximum="2048"
                            Minimum="1"
                            Margin="0 0 5 10" />
        <xctk:IntegerUpDown x:Name="tileHeightIntStepper"
                            Style="{StaticResource PrimaryLightNumericUpDownStyle}"
                            Value="{Binding TileHeight}"
                            IsEnabled="{Binding Scale, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:ScaleType.Tile}}"
                            Grid.Row="6"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Increment="1"
                            Maximum="2048"
                            Minimum="1"
                            Margin="5 0 0 10" />

        <Label x:Name="pixelRatioLabel"
               Style="{StaticResource MainSmallLabelStyle}"
               Content="Pixel Scale"
               Grid.Row="7"
               Grid.Column="0"
               VerticalAlignment="Center" />
        <xctk:IntegerUpDown x:Name="pixelToIntStepper"
                            Style="{StaticResource PrimaryLightNumericUpDownStyle}"
                            Value="{Binding PixelRatio}"
                            Grid.Row="8"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            VerticalAlignment="Center"
                            Increment="1"
                            Maximum="2048"
                            Minimum="1"
                            Margin="0 0 0 10" />

        <Label x:Name="desciptionLabel"
               Style="{StaticResource MainSmallLabelStyle}"
               Content="Description"
               Grid.Row="9"
               Grid.Column="0"
               VerticalAlignment="Center" />
        <TextBox x:Name="descriptionTextBox"
                 Style="{StaticResource PrimaryMidAccentTextAreaStyle}"
                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="10"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Height="72"
                 Margin="0 0 0 10" />

    </Grid>
</UserControl>
